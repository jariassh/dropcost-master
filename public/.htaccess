<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1. Redirigir robots.txt a Supabase Edge Function
  # Reemplaza la URL si tienes un dominio personalizado para Supabase
  RewriteRule ^robots\.txt$ https://jariassh.supabase.co/functions/v1/robots [L,R=301]

  # 2. Redirigir sitemap.xml a Supabase Edge Function
  RewriteRule ^sitemap\.xml$ https://jariassh.supabase.co/functions/v1/sitemap [L,R=301]

  # 3. Soporte para React Router (SPA)
  # Si el archivo o directorio solicitado no existe, env√≠a a index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
